# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Git specific files
*.gitattributes text linguist-language=gitattributes linguist-documentation=false eol=lf
.gitignore      text eol=lf

# Python
*.py            text eol=lf

# Markdown
*.md            text diff=markdown eol=lf

# Common web/dev text files
*.js             text eol=lf
*.css            text eol=lf
*.html           text eol=lf
LICENSE          text eol=lf
*.sql            text eol=lf
*.txt            text eol=lf

# Serialisation/Data formats
*.json           text eol=lf
*.toml           text eol=lf
*.xml            text eol=lf
*.yaml           text eol=lf
*.yml            text eol=lf

# Lock files (generated)
uv.lock             text eol=lf linguist-generated=true

# Binary files
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.ico      binary
*.zip      binary
*.gz       binary
*.db       binary
*.mp3      binary
*.coverage binary
*.7z       binary
*.bz       binary
*.bz2      binary
*.bzip2    binary
*.lz       binary
*.lzma     binary
*.rar      binary
*.tar      binary
*.taz      binary
*.tbz      binary
*.tbz2     binary
*.tgz      binary
*.tlz      binary
*.txz      binary
*.xz       binary
*.Z        binary
*.zst      binary
*.woff     binary
*.woff2    binary
*.ttf      binary
*.otf      binary
*.eot      binary
*.wasm     binary

# Documents (treat as text for diffing where possible)
*.doc      diff=astextplain binary
*.DOC      diff=astextplain binary
*.docx     diff=astextplain binary
*.DOCX     diff=astextplain binary
*.dot      diff=astextplain binary
*.DOT      diff=astextplain binary
*.pdf      diff=astextplain binary
*.PDF      diff=astextplain binary
*.rtf      diff=astextplain binary
*.RTF      diff=astextplain binary
*.epub     diff=astextplain binary

# GitHub language detection
*.py linguist-language=Python

coverage.xml linguist-generated=true
junit.xml linguist-generated=true
*.db linguist-generated=true
htmlcov/** linguist-generated=true
